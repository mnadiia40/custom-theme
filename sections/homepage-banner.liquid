{{ 'homepage-banner.css' | asset_url | stylesheet_tag }}

<div class="homepage-banner">
  <div class="homepage-banner__left-side">
    <h1 class="homepage-banner__title">{{ section.settings.heading }}</h1>
    <p class="homepage-banner__text">{{ section.settings.text }}</p>
    <a class="homepage-banner__button" href="{{ section.settings.button-url }}">
      {{- section.settings['button-text'] -}}
    </a>
    <div class="homepage-banner__statistics">
      <div class="homepage-banner__statistics-item">
        <p class="homepage-banner__statistic-title">{{ section.settings.statistics_title1 }}</p>
        <p class="homepage-banner__statistic-text">{{ section.settings.statistics_text1 }}</p>
      </div>
      <div class="homepage-banner__statistics-item">
        <p class="homepage-banner__statistic-title">{{ section.settings.statistics_title2 }}</p>
        <p class="homepage-banner__statistic-text">{{ section.settings.statistics_text2 }}</p>
      </div>
      <div class="homepage-banner__statistics-item">
        <p class="homepage-banner__statistic-title">{{ section.settings.statistics_title3 }}</p>
        <p class="homepage-banner__statistic-text">{{ section.settings.statistics_text3 }}</p>
      </div>
    </div>
  </div>
  <div class="homepage-banner__right-side">
    <img
      src="{{ section.settings.main-image.src | image_url: width: 1440 }}"
      class="homepage-banner__main-image"
      height="{{ section.settings.main-image.height }}"
      width="{{ section.settings.main-image.width }}"
    >
  </div>
</div>

{% schema %}
{
  "name": "Homepage Banner",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "text",
      "id": "text",
      "label": "Text"
    },
    {
      "type": "image_picker",
      "id": "main-image",
      "label": "Main Image"
    },
    {
      "type": "text",
      "id": "button-text",
      "label": "Button Text"
    },
    {
      "type": "url",
      "id": "button-url",
      "label": "Button Url"
    },
    {
      "type": "header",
      "content": "Statistics"
    },
    {
      "type": "text",
      "id": "statistics_title1",
      "label": "Statistics Title 1"
    },
    {
      "type": "text",
      "id": "statistics_text1",
      "label": "Statistics Text 1"
    },
    {
      "type": "text",
      "id": "statistics_title2",
      "label": "Statistics Title 2"
    },
    {
      "type": "text",
      "id": "statistics_text2",
      "label": "Statistics Text 2"
    },
    {
      "type": "text",
      "id": "statistics_title3",
      "label": "Statistics Title 3"
    },
    {
      "type": "text",
      "id": "statistics_text3",
      "label": "Statistics Text 3"
    }
  ]
}
{% endschema %}
